{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "tauri-nativify"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false
            }
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.bwc9876.tauri-nativify"
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "label": "main",
                "fullscreen": false,
                "resizable": true,
                "title": "tauri-nativify",
                "width": 800,
                "height": 600,
                "url": "index.html"
            }
        ]
    }
}
